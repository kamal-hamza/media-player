                  <ImageView fitHeight="30" fitWidth="30">
                     <image>
                        <Image url="https://cdn-icons-png.flaticon.com/512/3318/3318660.png"/>
                     </image>
                  </ImageView>
               </graphic>
               <StackPane.margin>
                  <Insets right="300.0" />
               </StackPane.margin>
            </Button>
             <Button alignment="CENTER" onAction="#onStopButtonClick">
