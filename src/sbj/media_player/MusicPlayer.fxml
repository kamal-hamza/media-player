<BorderPane minHeight="650.0" minWidth="600.0" stylesheets="@style.css" prefHeight="442.0" prefWidth="1002.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sbj.media_player.Music_Player">
<top>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;" />
    </top>
    <center>
      <StackPane id="currentlyPlayingPane" alignment="CENTER">
            <VBox alignment="CENTER" spacing="10">
               <Label alignment="CENTER" layoutY="119.0" style="-fx-font-family: 'Times New Roman'; -fx-font-size: 25px;" text="Currently Playing:" />
               <Label fx:id="titleLabel" layoutX="204.0" layoutY="162.0" text="Title" />
               <Label layoutX="181.0" layoutY="205.0" text="Album:" />
               <Label layoutX="162.0" layoutY="226.0" text="Composer:" />
               <Label layoutX="184.0" layoutY="251.0" text="Genre:" />
               <Label layoutX="186.0" layoutY="275.0" text="Artist:" />
            <Label fx:id="albumLabel" layoutX="238.0" layoutY="205.0" />
            <Label fx:id="composerLabel" layoutX="238.0" layoutY="226.0" />
            <Label fx:id="genreLabel" layoutX="238.0" layoutY="251.0" />
            <Label fx:id="artistLabel" layoutX="238.0" layoutY="275.0" />
         </VBox>
      </StackPane>
    </center>
    <bottom>
        <BorderPane>
            <top>
                <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                    <Label fx:id="durationLabel" text="0:00" />
                    <Slider fx:id="musicSlider" maxHeight="10" maxWidth="800" HBox.hgrow="ALWAYS" />
                    <Label fx:id="durationLabel2" text="0:00" />
                </HBox>
            </top>
            <bottom>
               <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                   <Button fx:id="togglePlayPauseButton" prefWidth="150" prefHeight="50" onAction="#togglePlayPause">
                        <graphic>
                            <ImageView fx:id="togglePlayPauseImageView" fitHeight="30" fitWidth="30">
                                <image>
                                    <Image url="file:src/sbj/media_player/Assets/play_icon.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                  <Button onAction="#stop" prefHeight="50" prefWidth="150">
                  <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                           <image>
                              <Image url="file:src\sbj\media_player\Assets\stop_icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>   
                  <Button onAction="#back" prefHeight="50" prefWidth="150">
                     <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                           <image>
                              <Image url="file:src\sbj\media_player\Assets\back_icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button onAction="#forward" prefHeight="50" prefWidth="150">
                     <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                           <image>
                              <Image url="file:src\sbj\media_player\Assets\forward_icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                    <Button fx:id = "repeatButton" prefWidth="150" prefHeight="50" onAction="#toggleRepeat">
                        <graphic>
                            <ImageView fx:id="repeatImageView" fitHeight="30" fitWidth="30">
                                <image>
                                    <Image url="file:src/sbj/media_player/Assets/repeat_false_icon.png"/>
                                </image>
                            </ImageView>
                     </graphic>
                  </Button>
                   <Button fx:id  = "shuffleButton" prefWidth="150" prefHeight="50" onAction="#toggleShuffle">
                  <graphic>
                     <ImageView fx:id="shuffleImageView" fitHeight="30" fitWidth="30">
                           <image>
                              <Image url="file:src/sbj/media_player/Assets/shuffle_false_icon.png"/>
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <!-- <Button prefWidth="150" prefHeight="50" onAction="#openFile" fx:id="openButton" text = "Open File">
                     <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                           <image>
                              <Image url="https://cdn-icons-png.flaticon.com/512/1092/1092216.png"/>
                           </image>
                        </ImageView>
                     </graphic>
                  </Button> -->
                  <Slider fx:id="volumeSlider" max="100.0" maxHeight="10" maxWidth="150" min="0.0" />
                </HBox>
            </bottom>
        </BorderPane>
    </bottom>
   <left>
      <Pane fx:id="libraryPane" prefHeight="200.0" prefWidth="310.0" BorderPane.alignment="CENTER">
        <fx:include source="Library.fxml" />
      </Pane>
   </left>
   <right>
      <Pane fx:id="playlistPane" prefHeight="1.0" prefWidth="310.0" BorderPane.alignment="CENTER">
         <fx:include source="Playlist.fxml" />
      </Pane>
   </right>
</BorderPane>
