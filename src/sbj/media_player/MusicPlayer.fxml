<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane minHeight="650.0" minWidth="600.0" prefHeight="442.0" prefWidth="1002.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sbj.media_player.Music_Player">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" onAction="#onCloseMenuClick"/>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" onAction="#onAboutMenuClick"/>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <Pane minHeight="200.0" minWidth="200.0" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
             <Label fx:id="buttomStatusText" layoutX="300.0" layoutY="285.0" />
             <Label fx:id="currentlyPlaying" layoutX="300.0" layoutY="185.0" />
             <Label fx:id="playerStatus" layoutX="300.0" layoutY="85.0" />
         </children>
      </Pane>
   </center>
   <bottom>
      <StackPane prefHeight="59.0" prefWidth="1002.0" BorderPane.alignment="CENTER">
         <children>
             <Button alignment="CENTER" mnemonicParsing="false" onAction="#onStatusButtonClick" text="Status">
               <StackPane.margin>
                  <Insets right="400.0" />
               </StackPane.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onPlayButtonClick" text="Play">
               <StackPane.margin>
                  <Insets right="300.0" />
               </StackPane.margin>
            </Button>
             <Button alignment="CENTER" onAction="#onStopButtonClick" text="Stop">
               <StackPane.margin>
                  <Insets right="200.0" />
               </StackPane.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onPauseButtonClick" text="Pause">
               <StackPane.margin>
                  <Insets right="90.0" />
               </StackPane.margin>
            </Button>
            <Button alignment="CENTER" layoutX="491.0" layoutY="27.0" onAction="#onBackButtonClick" text="Back">
               <StackPane.margin>
                  <Insets right="-10.0" />
               </StackPane.margin>
            </Button>
            <Button alignment="CENTER" layoutX="550.0" layoutY="27.0" mnemonicParsing="false" onAction="#onForwardButtonClick" text="Forward">
               <StackPane.margin>
                  <Insets right="-125.0" />
               </StackPane.margin>
            </Button>
            <Button alignment="CENTER" layoutX="491.0" layoutY="27.0" onAction="#onRepeatButtonClick" text="Repeat">
               <StackPane.margin>
                  <Insets right="-250.0" />
               </StackPane.margin>
            </Button>
            <Button alignment="CENTER" layoutX="488.0" layoutY="27.0" mnemonicParsing="false" onAction="#onOpenButtonClick" text="Open">
               <StackPane.margin>
                  <Insets right="-365.0" />
               </StackPane.margin>
            </Button>
         </children>
      </StackPane>
   </bottom>
   <left>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER_LEFT" />
   </left>
   <right>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER_RIGHT" />
   </right>
</BorderPane>
