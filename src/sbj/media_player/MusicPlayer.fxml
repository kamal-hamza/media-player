                  <ImageView fitHeight="30" fitWidth="30">
                     <image>
                        <Image url="https://cdn-icons-png.flaticon.com/128/4029/4029077.png"/>
                     </image>
                  </ImageView>
               </graphic>
               <StackPane.margin>
                  <Insets right="195.0" />
               </StackPane.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onPauseButtonClick">
