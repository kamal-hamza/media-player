            <Button prefWidth="150" prefHeight="50" onAction="#pause" text="Pause"/>
            <Button prefWidth="150" prefHeight="50" onAction="#back" text="Back"/>
            <Button prefWidth="150" prefHeight="50" onAction="#forward" text="Forward"/>
            <Button prefWidth="150" prefHeight="50" onAction="#repeat" text="Repeat"/>
